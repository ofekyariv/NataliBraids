<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context=".GatheredHairActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="Natali Braids"
        android:fontFamily="cursive"
        android:gravity="center"
        android:textSize="45sp"
        android:textColor="@color/black"/>
    <ImageView
        android:id="@+id/ivGathered"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.9"
        android:src="@drawable/logo1" />
    <ImageButton
        android:id="@+id/btnLike"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_heart"
        android:padding="10dp"
        android:scaleType="fitXY"
        android:background="@drawable/round_button"
        android:layout_gravity="center"
        android:layout_margin="20dp"/>

    <TextView
        android:id="@+id/etGathered"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3.3"
        android:layout_gravity="center"
        android:fontFamily="cursive"
        android:textSize="23sp"
        android:gravity="center"
        android:text="@string/tv_details" />
    <Button
        android:id="@+id/btMoreG"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="@string/bt_morepictures"
        android:textSize="20sp"
        android:background="#BA7474"/>
</LinearLayout>