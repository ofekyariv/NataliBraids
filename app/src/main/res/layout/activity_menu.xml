<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context=".MenuActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="Natali Braids"
        android:fontFamily="cursive"
        android:gravity="center"
        android:textSize="45sp"
        android:textColor="@color/black"/>

    <ImageView
        android:id="@+id/ivMenuPhoto"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:src="@drawable/menuphotoo"
        />

    <Button
        android:id="@+id/bt_hairStyles"
        android:layout_width="410dp"
        android:layout_height="80dp"
        android:background="@color/colorPrimaryDark"
        android:hint="@string/bt_hairstyles"


        />

    <Button
        android:id="@+id/bt_appointment"
        android:layout_width="410dp"
        android:layout_height="80dp"
        android:background="@color/colorPrimaryDark"
        android:hint="@string/bt_appointment"


        />

</LinearLayout>